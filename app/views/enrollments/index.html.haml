%h1 Participants




%table
  %tr
    %th Name
    %th Location
    %th Phone No
    %th Email
    %th Description
    %th Action
    %th Action
  

  - @participants.each do |participant| 
    %tr
      %td= participant.p_name
      %td= participant.p_loc 
      %td= participant.p_phone
      %td= participant.p_email
      %td= participant.p_des 
      %td= link_to 'Details', participant_path(participant)
      %td= link_to 'Edit' , edit_participant_path(participant)

%p
= link_to 'Home', competitions_path  
%p
= link_to "Back to #{@competition.competition_name}'s Competition Page", competition_path(@competition)  
  
= #link_to 'Back', competition_path
