- flash.each do |key, value|
	= content_tag :div, "*"+value, class: "flash_#{key}"

%nav
	= image_tag "logo.png", class: 'logo_button'
	%ul
		
        
%a{:href => year_competitions_path(params[:year_id])}
	= image_tag "home.png", class: 'home_button'
.dropdown
	%input.dropdown-toggle{:type => "text"}
	.dropdown-text Account
	%ul.dropdown-content
		%li
			= link_to 'Settings', class: 'setting_dropdown'
		%li
			Value
		%li
			= link_to 'Logout', welcome_destroy_path, :method => :delete, class: 'setting_dropdown'

= form_tag year_competition_round_qualifications_path, :method => :post do
	%div.list
		- val = Round.where("id"=>params[:round_id])
		%strong.til Qualified participants of round : #{val[0].round_name}
		%p
		%p
		%strong.out *Note: Select Participants, Enter Contestant number and select Round to send those Participants
		- val = "#{@rounds[0].id}"
		- if @rounds.count!=1 
			%table
				%tr
					%th{:width=>"20"} Type
					%th Name
					%th Select
					%th Contestant Number
					%th Score
				- @participants.each do |participant| 
					%tr
						%td
							= image_tag "participant.jpg", class: 'part_but' 
						%td= participant.p_name
						%td= check_box_tag 'arr_part[]', participant.id
						%td= text_field_tag "participant_number[#{participant.id}]"
						%td= calc_score(participant,@round)
			%p
			%p
			%strong.item Add to round
			%p
			- @rounds.each do |round|
				- if round.id != params[:round_id]
					= radio_button_tag 'first_round', round.id
					%strong #{round.round_name} 
			%p
			= submit_tag 'Submit', class: 'gen_submit'

		-else
			%p
			%strong.item We don't have any other round, please add round to continue
		



