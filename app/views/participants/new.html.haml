- flash.each do |key, value|
	= content_tag :div, "*"+value, class: "flash_#{key}"
%nav
	= image_tag "logo.png", class: 'logo_button'
	%ul
		
      	
%a{:href => competitions_path}
	= image_tag "home.png", class: 'home_button'
.dropdown
	%input.dropdown-toggle{:type => "text"}
	.dropdown-text Account
	%ul.dropdown-content
		%li
			= link_to 'Settings', class: 'setting_dropdown'
		%li
			Value
		%li
			= link_to 'Logout', welcome_destroy_path, :method => :delete, class: 'setting_dropdown'
= form_tag participants_path do
	%div.absolute 
		%strong *Register New Participant :
		%p
			= label :participant, :p_name, 'Name:'
			%p
			= text_field :participant, :p_name, class: 'enteries' 

		%p	
			= label  :participant, :p_loc, 'Location'
			%p
			= text_area :participant, :p_loc, class: 'enteries' 
		%p
	
			= label :participant, :p_phone, 'Phone (10 digits)'
			%p
			= text_field :participant, :p_phone, class: 'enteries' 
		%p
	
			= label :participant, :p_email, 'Email'
			%p
			= text_field :participant, :p_email, class: 'enteries' 
		%p
	
			= label :participant, :p_des, 'Description'
			%p
			= text_area :participant, :p_des, class: 'enteries' 
		%p
			= submit_tag 'Save Changes', class: 'register' 

