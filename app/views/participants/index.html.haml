- flash.each do |key, value|
	= content_tag :div, "*"+value, class: "flash_#{key}"

%nav
	= image_tag "logo.png", class: 'logo_button'
	%ul
		%li.current
			= link_to 'Add Participant', new_year_participant_path(params[:year_id]), class: 'menuitem'
		
      	
%a{:href => year_competitions_path(params[:year_id])}
	= image_tag "home.png", class: 'home_button'
.dropdown
	%input.dropdown-toggle{:type => "text"}/
	.dropdown-text Account
	%ul.dropdown-content
		%li
			= link_to 'Settings', class: 'setting_dropdown'
		%li
			Value
		%li
			= link_to 'Logout', welcome_destroy_path, :method => :delete, class: 'setting_dropdown'
%div.list
	%select{:onchange => "window.location.href=this.value"}
		%option Filter by location
		- @location_names.each do |loc|
			%option{:value => year_participants_path(params[:year_id],:filter_by_location => loc)} #{loc}
	%select{:onchange => "window.location.href=this.value"}
		%option No of Participants to display
		- (1..@participant_count).step(2) do |i|
			%option{:value => year_participants_path(params[:year_id],:display_items => i)} #{i}
		%option{:value => year_participants_path(params[:year_id],:display_items => @participant_count)} All
	%table#participants
		%thead
			%tr
				%th{:width=>"20"} Type
				%th{:width=>"80"}= link_to 'Name', year_participants_path(params[:year_id],:sort=> 'P_Name'), class: 'custome_menu'
				%th{:width=>"40"}=link_to 'Location', year_participants_path(params[:year_id],:sort=> 'p_loc'), class: 'custome_menu'
				%th{:width=>"50"} Phone
				%th{:width=>"200"} Email
				%th{:width=>"100"} Description
				%th{:width=>"10"} Edit
				%th{:width=>"10"} Delete
   
  
		%tbody
		- @participants.each do |participant| 
			%tr
				%td
					= image_tag "participant.jpg", class: 'part_button'  
				%td= link_to participant.p_name, new_year_participant_enrollment_path(params[:year_id],participant), class: 'custome_menu'
				%td= participant.p_loc 
				%td= participant.p_phone
				%td= participant.p_email
				%td= participant.p_des
				%td
					%a{:href => edit_year_participant_path(params[:year_id],:id => participant.id)}
						= image_tag "edit.png", class: 'edit_button'  
				%td
					%a{:href => "#"}
						= image_tag "delete.png", class: 'comp_delete'  
    



  
