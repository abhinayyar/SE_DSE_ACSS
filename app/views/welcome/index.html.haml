%link{:href => "http://fonts.googleapis.com/css?family=Open+Sans", :rel => "stylesheet", :type => "text/css"}

%h1 Welcome To Texas Auctioneers Association
= form_tag welcome_create_path :method => :post do 	
	%div.absolute 
		%p Email 
		= text_field :cred, :email_id, class: 'email'
		%p Password 
		= text_field :cred, :password, class: 'password'
		%p
		= check_box_tag "user[admin]", 'admin' , checked = false
		%a Admin
		= check_box_tag "user[judge]", 'judge' , checked = false
		%a Judge
		%p
		= submit_tag 'Login', class: 'loginbutton', :id => 'submit'
          
            
