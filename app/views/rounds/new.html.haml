- flash.each do |key, value|
	= content_tag :div, "*"+value, class: "flash_#{key}"
%nav
	= image_tag "logo.png", class: 'logo_button'
	%ul
		
      	
%a{:href => competitions_path}
	= image_tag "home.png", class: 'home_button'
.dropdown
	%input.dropdown-toggle{:type => "text"}
	.dropdown-text Account
	%ul.dropdown-content
		%li
			= link_to 'Settings', class: 'setting_dropdown'
		%li
			Value
		%li
			= link_to 'Logout', welcome_destroy_path, :method => :delete, class: 'setting_dropdown'
= form_tag competition_rounds_path do
	%div.absolute 
		%strong *Register New Round :
		%p
			= label :round, :round_name 
			%p
			= text_field :round, :round_name, class: 'enteries'
		%p
			= label :round, :round_des 
			%p
			= text_area :round, :round_des, class: 'enteries'
		%p  
			= submit_tag 'Submit', class: 'register'
			


  

