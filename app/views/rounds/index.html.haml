- flash.each do |key, value|
	= content_tag :div, "*"+value, class: "flash_#{key}"
- if session[:user_type] == 'admin'
	%nav
		= image_tag "logo.png", class: 'logo_button'
		%ul
			%li.current
				= link_to 'Add Round', new_year_competition_round_path(params[:year_id],params[:competition_id]), class: 'menuitem'
      	
	%a{:href => year_competitions_path(params[:year_id])}
		= image_tag "home.png", class: 'home_button'
	.dropdown
		%input.dropdown-toggle{:type => "text"}
		.dropdown-text Account
		%ul.dropdown-content
			%li
				= link_to 'Settings', class: 'setting_dropdown'
			%li
				Value
			%li
				= link_to 'Logout', welcome_destroy_path, :method => :delete, class: 'setting_dropdown'
	%div.list
		- val = Competition.where("id"=>params[:competition_id])
		%strong.til List of rounds for : #{val[0].competition_name}
		%p
		%p
		%table
			%thead
				%tr
					%th{:width => "20"} Type
					%th{:width => "100"} Name
					%th{:width => "100"} Description
					%th{:width => "100"} Participants
					%th{:width => "100"} Edit
					%th{:width => "100"} Delete
		
			%tbody
			- @rounds.each do |round|
				%tr 
					%td.center{align: "center"}
						= image_tag "round.jpg", class: 'round_button'  
					%td.center{align: "center"}= link_to round.round_name, year_competition_round_path(params[:year_id],@competition, round), class: 'custome_menu'
					%td.center{align: "center"}= round.round_des
					- np = Qualification.where("round_id"=> round.id)
					%td.center{align: "center"}= np.count
					%td
						%a{:href => edit_year_competition_round_path(params[:year_id],params[:competition_id],round.id)}
							= image_tag "edit.png", class: 'round_edit' 
					%td
						%a{:href => "#"}
							= image_tag "delete.png", class: 'round_delete1' 						

- elsif session[:user_type] == 'judge'
	%judgebox 
		%h2.analysis Rounds
		- @rounds.each do |round|
			.judgebox 
				= link_to round.round_name, year_competition_round_qualifications_path(params[:year_id],@competition, round), class: 'menuitemjudge'
	
